<?xml version="1.0"?>
<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    <persistence-unit name="persistence" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
       <class>eu.ist_phosphorus.harmony.idb.database.hibernate.Reservation</class>
       <class>eu.ist_phosphorus.harmony.idb.database.hibernate.Connections</class>
       <class>eu.ist_phosphorus.harmony.idb.database.hibernate.Service</class>
       <class>eu.ist_phosphorus.harmony.idb.database.hibernate.Endpoint</class>
       <class>eu.ist_phosphorus.harmony.idb.database.hibernate.NrpsConnections</class>
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.Subscription</class>
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.TNAPrefix</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.VIEW_InterDomainLink</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.VIEW_ReservationMapping</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.VIEW_ReservationPeriod</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.VIEW_DomainReservationMapping</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.MAPNRPSResvID</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.Domain</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.InterDomainLink</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.DomSupportedAdaption</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.DomSupportedSwitch</class>        
		<class>eu.ist_phosphorus.harmony.idb.database.hibernate.DomSupportedBandwidth</class>        
        <properties>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
            <property name="openjpa.ConnectionURL" value="jdbc:hsqldb:mem:jamsession"/>
            <property name="openjpa.ConnectionDriverName" value="org.hsqldb.jdbcDriver "/>
            <property name="openjpa.ConnectionUserName" value="sa"/>
            <property name="openjpa.ConnectionPassword" value=""/>
        </properties>
    </persistence-unit>
</persistence>
